{
  "build": {
    "dockerfile": "./Dockerfile",
    "args": {
      "PLATFORM": "linux/amd64"
    }
  },
  "runArgs": [
    "--init",
    "--privileged", // Required for Docker in Docker
    "-v",
    "/var/run/docker.sock:/var/run/docker.sock" // Mount Docker socket
  ],
  "mounts": [
    "source=${localWorkspaceFolderBasename}-frontend-webapp-node_modules,target=${containerWorkspaceFolder}/frontend/webapp/node_modules,type=volume"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.black-formatter",
        "ms-python.isort",
        "ms-python.python",
        "hashicorp.terraform",
        "usernamehw.errorlens",
        "esbenp.prettier-vscode",
        "Angular.ng-template",
        "bradlc.vscode-tailwindcss"
      ]
    }
  }
}
